<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wpa.view.main.MainView">
    <children>
        <SplitPane dividerPositions="0.25"  VBox.vgrow="ALWAYS" fx:id="splitPane">
            <items>
                <HBox style="--border-color: red;" HBox.hgrow="ALWAYS">
                    <children>
                        <TreeView fx:id="categoryTree" style="-fx-border-color: yellow;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <HBox style="--border-color: red;"  HBox.hgrow="ALWAYS">
                    <children>
                        <TableView style="-fx-border-color: blue;" VBox.vgrow="ALWAYS"  HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn prefWidth="75.0" text="C1" />
                                <TableColumn prefWidth="75.0" text="C2" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </HBox>
            </items>
        </SplitPane>
    </children>
</VBox>
